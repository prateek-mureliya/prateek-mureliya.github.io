#!/bin/sh
# Run linter
echo "🔍 Running lint..."
npm run lint
if [ $? -ne 0 ]; then
  echo "❌ Lint failed. Commit aborted."
  exit 1
fi

# Run build
echo "🏗️ Running build..."
npm run build
if [ $? -ne 0 ]; then
  echo "❌ Build failed. Commit aborted."
  exit 1
fi

echo "✅ Lint and build passed. Proceeding with commit."
exit 0